<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Samples.Views.EssentialsShareView"
             Title="EssentialsShareView">
    
    <!--
    https://docs.microsoft.com/en-us/xamarin/essentials/share?context=xamarin%2Fxamarin-forms&tabs=android
    -->
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Essentials Share - Text" />
            <Button x:Name="btnShareText" Text="Share Text" Clicked="btnShareText_Clicked"/>
            <Label Text="Essentials Share - Url" />
            <Button x:Name="btnShareUrl" Text="Share Url" Clicked="btnShareUrl_Clicked"/>
            <Label Text="Essentials Share - File" />
            <Button x:Name="btnShareFile" Text="Share File" Clicked="btnShareFile_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>