    https://docs.microsoft.com/en-us/xamarin/essentials/open-browser?context=xamarin%2Fxamarin-forms&tabs=ios
    -->
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Browser - Open"/>
