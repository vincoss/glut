@page
@model ResultsModel
@{
    ViewData[ViewConstants.Title] = Model.Title;
    var DateFormat = @GlutWebConstants.LongDateTimeFormat;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @AppResources.Results
        <small>@AppResources.ResultsDescription</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>@AppResources.Home</a></li>
        <li class="active">@AppResources.Results</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Project: @Model.Project - Run: @Model.RunId</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@AppResources.Start</th>
                                <th>@AppResources.End</th>
                                <th>@AppResources.Url</th>
                                <th>@AppResources.Success</th>
                                <th>@AppResources.StatusCode</th>
                                <th>@AppResources.HeaderLength</th>
                                <th>@AppResources.ResponseLength</th>
                                <th>@AppResources.TotalLength</th>
                                <th>@AppResources.RequestMs</th>
                                <th>@AppResources.ResponseMs</>
                                <th>@AppResources.TotalMs</th>
                                <th>@AppResources.ResponseHeaders</th>
                                <th>@AppResources.Exception</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tfoot>
                            <tr>
                                <th>@AppResources.Start</th>
                                <th>@AppResources.End</th>
                                <th>@AppResources.Url</th>
                                <th>@AppResources.Success</th>
                                <th>@AppResources.StatusCode</th>
                                <th>@AppResources.HeaderLength</th>
                                <th>@AppResources.ResponseLength</th>
                                <th>@AppResources.TotalLength</th>
                                <th>@AppResources.RequestMs</th>
                                <th>@AppResources.ResponseMs</>
                                <th>@AppResources.TotalMs</th>
                                <th>@AppResources.ResponseHeaders</th>
                                <th>@AppResources.Exception</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


@section Scripts
{
    <script>
      $(document).ready(function ()
      {
            var token = $('input[name="__RequestVerificationToken"]').val();

            $('#table').DataTable({
                processing: true,
                serverSide: true,
                searching: true,
                filter: true,
                orderMulti: false,
                ordering: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                pageLength: 10,
                paging: true,
                language: { searchPlaceholder: '@AppResources.ResultsSeachPlaceholder' },
                scrollX: true,
                fnCreatedRow: function (nRow, aData, iDataIndex)
                {
                    $(nRow).children("td").css("overflow", "hidden");
                    $(nRow).children("td").css("white-space", "nowrap");
                    $(nRow).children("td").css("text-overflow", "ellipsis");
                },
                ajax:
                {
                    url: 'result/@Model.Project/@Model.RunId',
                    type: 'POST',
                    dataSrc: 'data',
                    datatype: 'json',
                    data: { __RequestVerificationToken: token }
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        render: function (data) { return moment(data).format('@DateFormat');}
                    },
                    {
                        "targets": [1],
                        render: function (data) { return moment(data).format('@DateFormat');}
                    },
                    {
                        "targets": [2],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        "targets": [4],
                        "searchable": true
                    },
                    {
                        "targets": [11],
                        "searchable": true
                    }],
                columns: [
                    { data: "startDateTime", },
                    { data: "endDateTime" },
                    { data: "url" },
                    { data: "isSuccessStatusCode" },
                    { data: "statusCode" },
                    { data: "headerLength" },
                    { data: "responseLength" },
                    { data: "totalLength" },
                    { data: "requestTicks" },
                    { data: "responseTicks" },
                    { data: "totalTicks" },
                    { data: "responseHeaders" },
                    { data: "exception" }
                ]
            });
      });
    </script>

    <style>
        th {
            white-space: nowrap;
        }
    </style>
}
