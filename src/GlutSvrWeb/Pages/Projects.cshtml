@page
@model ProjectsModel
@{
    ViewData[GlutWebConstants.Title] = Model.Title;
    var DateFormat = @GlutWebConstants.ShortDateTimeFormat;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @AppResources.Projects
        <small>@AppResources.ProjectsDescription</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-page="/"><i class="fa fa-dashboard"></i>@AppResources.Home</a></li>
        <li class="active">@AppResources.Projects</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@AppResources.Projects</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@AppResources.ProjectName</th>
                                <th>@AppResources.Runs</th>
                                <th>@AppResources.LastChangeDateTime</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tfoot>
                            <tr>
                                <th>@AppResources.ProjectName</th>
                                <th>@AppResources.Runs</th>
                                <th>@AppResources.LastChangeDateTime</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts
{
    <script>
       $(document).ready(function ()
        {
           var token = $('input[name="__RequestVerificationToken"]').val();

            $('#table').DataTable({
                processing: true,
                serverSide: true,
                searching: true,
                filter: true,
                orderMulti: false,
                ordering: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                pageLength: 10,
                paging: true,
                language: { searchPlaceholder: '@AppResources.ProjectsSeachPlaceholder' },
                scrollX: true,
                fnCreatedRow: function (nRow, aData, iDataIndex)
                {
                    $(nRow).children("td").css("overflow", "hidden");
                    $(nRow).children("td").css("white-space", "nowrap");
                    $(nRow).children("td").css("text-overflow", "ellipsis");
                },
                ajax:
                {
                   url: 'project',
                    type: 'POST',
                    dataSrc: 'data',
                    datatype: 'json',
                    data: { __RequestVerificationToken: token }
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": true,
                    "searchable": true
                },
                {
                    "targets": [1],
                    "searchable": false
                },
                {
                    "targets": [2],
                    "searchable": false,
                     render: function (data) { return moment(data).format('@DateFormat');}
                }],
                columns: [
                    { data: "projectName", name: "Project Name", autoWidth: true },
                    { data: "runs" },
                    { data: "lastChangeDateTime" }
                ]
            });
        });
    </script>
}
